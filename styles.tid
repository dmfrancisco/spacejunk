title: $:/plugins/markdown/styles
tags: [[$:/tags/Stylesheet]]

.tc-tiddler-body > div > *:first-child {
  margin-top: 0 !important;
}

.tc-tiddler-body > div > *:last-child {
  margin-bottom: 0 !important;
}

img.emoji {
   /* Size the emoji according to the surrounding text */
   height: 1em;
   width: 1em;

   /* Add space before & after each emoji and pull them upwards for better optical alignment */
   margin: 0 .05em 0 .1em;
   vertical-align: -0.1em;
}
